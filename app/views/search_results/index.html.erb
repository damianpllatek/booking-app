<h1>Wyniki wyszukiwania</h1>

<h3><%= params[:search_form][:start_date] %> - <%= params[:search_form][:end_date] %></h3>

<div class="row mt-3">
  <% @rooms.each do |room| %>
    <div class="col-sm-4 mb-3">
      <div class="card">
        <img src="<%= room.photo %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= room.name %></h5>
          <p class="card-text"><%= room.description %></p>
          <a href="#" class="btn btn-primary">Wybierz</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
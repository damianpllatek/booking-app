<h2 class="mb-5">Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs form-group mb-3">
    <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email", class: "form-control mb-3" } %>
  </div>

  <div class="form-actions mb-3">
    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

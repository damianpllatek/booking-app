<div class="container sessions-container">
  <h1 class="sessions-title mb-5">Zapomniałeś/aś hasła?</h1>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs form-group mb-3">
      <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email", class: "form-control sessions-form mb-3" } %>
    </div>

    <div class="form-actions mb-3">
      <%= f.button :submit, "Resetuj hasło", class: "btn btn-primary sessions-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
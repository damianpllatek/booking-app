<div class="container sessions-container">
  <h1 class="mb-5">Zmień hasło</h1>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs form-group mb-3">
      <%= f.input :password,
                  label: "Nowe hasło",
                  required: true,
                  autofocus: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "form-control sessions-form mb-3" } %>
      <%= f.input :password_confirmation,
                  label: "Potwierdź hasło",
                  required: true,
                  input_html: { autocomplete: "new-password", class: "form-control sessions-form mb-3" } %>
    </div>

    <div class="form-actions mb-3">
      <%= f.button :submit, "Zmień hasło", class: "btn btn-primary sessions-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
<h1>Strony</h1>

<div class="flickr_pagination mt-4 mb-4">
  <%= will_paginate @pages, :container => false %>
</div>

<% @pages.each do |page| %>
  <div class="card text-center mb-3">
    <div class="card-header">
      Strona # <%= page.id %>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= page.title %></h5>
      <h6 class="card-title"><%= page.seo_title %></h6>
      <p class="card-text"><%= page.content %></p>
      <p class="card-text">Wy≈õwietlenia <%= page.views %></p>
      <%= link_to 'Zobacz', page_path(page), class: "btn btn-success" %>
    </div>
    <div class="card-footer text-muted">
      2 days ago
    </div>
  </div>
<% end %>


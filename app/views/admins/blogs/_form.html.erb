<%= simple_form_for @blog, url: [:admins, @blog] do |form| %>
  <%= form.input :title, label: "Tytuł", input_html: { class: "form-control" } %>
  <%= form.input :content, label: "Treść", input_html: { class: "form-control" } %>
  <%= form.input :views, label: "Wyświetlenia", input_html: { class: "form-control" } %>
  <%= form.button :submit, value: "Zapisz", class: "btn btn-primary mt-3" %>
<% end %>
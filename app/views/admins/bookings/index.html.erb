<h1>Panel Admina - Rezerwacje</h1>


<% @bookings.each do |booking| %>
  <div class="card text-center mb-3">
    <div class="card-header">
      Rezerwacja # <%= booking.id %><br>
    </div>
    <div class="card-body">
      <p class="card-text">Data przyjazdu: <%= booking.start_date %><br></p>
      <p class="card-text">Data wyjazdu: <%= booking.end_date %><br></p>
      <p class="card-text">Adres email: <%= booking.email%><br></p>
      <p class="card-text">Imię: <%= booking.firstname %><br></p>
      <p class="card-text">Nazwisko: <%= booking.lastname %><br></p>
      <p class="card-text">Ulica: <%= booking.street %><br></p>
      <p class="card-text">Numer apartamentu: <%= booking.apartment_number %><br></p>
      <p class="card-text">Kod pocztowy: <%= booking.postcode %><br></p>
      <p class="card-text">Miasto: <%= booking.city %><br></p>
      <p class="card-text">Rodo <%= booking.rodo%><br></p>
      <p class="card-text">Cena: <%= booking.price%><br></p>
      <%= link_to 'Zobacz', booking_path(booking), class: "btn btn-success" %>
      <%= link_to 'Edytuj', edit_admins_booking_path(booking), class: "btn btn-primary" %>
      <%= link_to 'Usuń', admins_booking_path(booking), class: "btn btn-danger", method: :delete %>
    </div>
    <div class="card-footer text-muted">
      2 days ago
    </div>
  </div>
<% end %>

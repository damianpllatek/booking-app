<%= simple_form_for @booking, url: [:admins, @booking] do |form| %>
  <%= form.input :start_date, label: "Data przyjazdu", input_html: { class: "form-control mb-3" } %>
  <%= form.input :end_date, label: "Data wyjazdu", input_html: { class: "form-control mb-3" } %>
  <%= form.input :email, label: "Adres email", input_html: { class: "form-control mb-3" } %>
  <%= form.input :firstname, label: "ImiÄ™", input_html: { class: "form-control mb-3" } %>
  <%= form.input :lastname, label: "Nazwisko", input_html: { class: "form-control mb-3" } %>
  <%= form.input :street, label: "Ulica", input_html: { class: "form-control mb-3" } %>
  <%= form.input :apartment_number, label: "Numer pokoju", input_html: { class: "form-control mb-3" } %>

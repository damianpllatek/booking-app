<%= simple_form_for :search_form, method: :get do |form| %>
  <%= form.input :start_date, label: "Data początkowa", input_html: { class: "form-control mb-3" } %>
  <%= form.input :end_date, label: "Data końcowa", input_html: { class: "form-control mb-3" } %>
  <%= form.button :submit, value: "Szukaj", class: "btn btn-primary mt-3" %>
<% end %>
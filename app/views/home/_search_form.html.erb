<div class="search-form">
  <%= simple_form_for :search_form, method: :get do |form| %>
    <%= form.input :start_date, label: "Data przyajzdu:", input_html: { class: "form-control mb-3" } %>
    <%= form.input :end_date, label: "Data wyjazdu", input_html: { class: "form-control mb-3" } %>
    <%= form.button :submit, value: "Szukaj", class: "btn btn-primary header-btn btn-lg mt-3" %>
  <% end %>
</div>
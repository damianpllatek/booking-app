<%= simple_form_for :search_form, method: :get do |form| %>
  <%= form.date_field :start_date, label: "Data początkowa", input_html: { class: "mb-3" } %><br>
  <%= form.date_field :end_date, label: "Data końcowa", input_html: { class: "mb-3" } %><br>
  <%= form.button :submit, value: "Szukaj", class: "btn btn-primary mt-3" %>
<% end %>